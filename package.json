{
  "name": "isomorphic-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "node --es-module-specifier-resolution=node src/server/server.dev.js",
    "start:prod": "NODE_ENV=production node dist/server/server.prod.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/server/server.prod.js",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "html-minifier": "^4.0.0",
    "http-status-codes": "^2.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "chalk": "^5.3.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "vite": "^4.3.9"
  }
}
